    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/rectangle_rounded_all"
        android:textSize="16sp"
        android:minWidth="120dp"
        android:maxWidth="280dp"
        android:text="текс пoвідомлення"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_alignParentRight="true" />





    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/onlineText"
        android:textSize="12sp"
        android:text="час смс"
        android:layout_below="@+id/message_text"
        android:layout_toRightOf="@+id/message_text"
        android:layout_toEndOf="@+id/message_text"
        android:layout_marginTop="-19dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginStart="-90dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        />


    <TextView
        android:id="@+id/tvConfirmSendMessage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/sign_send_confirm_message"
        android:textColor="@color/colorAccentWhite"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_below="@+id/message_text"
        android:layout_toStartOf="@+id/message_time"
        android:layout_toLeftOf="@+id/message_time"
        android:layout_marginRight="86dp"
        android:layout_marginEnd="86dp"
        android:layout_marginTop="-19dp"
        />

    <TextView
        android:id="@+id/tvConfirmReceivedMessage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/sign_received_confirm_message"
        android:textColor="@color/colorAccentWhite"
        android:visibility="visible"
        android:textAlignment="center"
        android:layout_below="@+id/message_text"
        android:layout_toStartOf="@+id/message_time"
        android:layout_toLeftOf="@+id/message_time"
        android:layout_marginRight="91dp"
        android:layout_marginEnd="91dp"
